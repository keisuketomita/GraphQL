      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div id="gnavi" class="collapse navbar-collapse clearfix">
            <ul class="nav navbar-nav clearfix">
              <li><%= link_to '投稿一覧', messages_path %></li>
              <li><%= link_to '新規投稿', new_message_path %></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <%= yield %>
    <footer>
      <p>運営会社 HOGE株式会社</p>
      <p>© 2020 HOGECorp.</p>
    </footer>
  </body>
