<h2>新しく投稿する</h2>
<%= form_with(model: @message, local: true, url: confirm_messages_path ) do |form| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= @message.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="message_title">
    <%= form.label :content %>
    <br><%= form.text_area :content %>
  </div>
  <input type="submit" name="commit" value="新規投稿" data-disable-with="新規投稿中･･･">
<% end %>
<div class="btn-wrapper">
  <button class="btn btn-default">
    <%= link_to '投稿一覧に戻る', messages_path %>
  </button>
</div>
